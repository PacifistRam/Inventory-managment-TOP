extends layout

block content

    div(class = "main-content")
        h1= title

        form(action='', method='post' class='category-form')
            label(for='category-name') Category Name:
            input#category-name(type='text', 
            name='categoryName', required value =(undefined=== categoryData ? "" : categoryData.category_name))
            
            label(for='category-desc') Description:
            textarea#category-desc(required, minlength='30', name='categoryDesc' rows='5' value=(undefined===categoryData ? "" : categoryData.category_desc)) 
            
            input(type='submit', value='Submit')


            if errors 
                ul 
                    for error in errors 
                        li= error.msg